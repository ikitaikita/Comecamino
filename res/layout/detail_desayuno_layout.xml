<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondoT"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:minWidth="400dp"
        android:orientation="vertical" >
        
    </RelativeLayout>

    
    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/ButtonVote"
        android:layout_below="@+id/header"            
        android:layout_margin="10dp"
        android:background="@drawable/border"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/ScrollViewContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

 
            
              <TextView
		        android:id="@+id/nombreMenu"
		        android:layout_width="match_parent"
		        android:layout_marginTop="10dp"	       
		       	android:layout_height="40dp"	 		       	
		        android:gravity="center"		       
		        android:textColor="@color/text_titulo"
		          />
              
              <TextView
		        android:id="@+id/nombreRestaurante"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"		      
		        android:layout_below="@+id/nombreMenu"
		        android:gravity="center"		       
		        android:textColor="@color/text_titulo"
		         />
              
              <TextView
		        android:id="@+id/textdescripciond"
		        android:layout_width="match_parent"
		        android:paddingTop="5dp"
		        android:layout_height="30dp" 		      
		        android:layout_below="@+id/nombreRestaurante"
		        android:layout_marginLeft="10dip"		         
		        android:textColor="@color/text_descrip"
		        android:textStyle="bold"
		          />
               <TextView
		        android:id="@+id/descripciond"
		        android:layout_width="match_parent"
		        android:paddingTop="5dp"
		        android:layout_height="wrap_content"		      
		        android:layout_below="@+id/textdescripciond"
		        android:layout_marginLeft="10dip"	       
		        android:textColor="@color/text_descrip"
		        />
               <TextView
		        android:id="@+id/textprecioMenu"
		        android:layout_width="match_parent"
		        android:paddingTop="5dp"
		        android:layout_height="30dp" 		      
		        android:layout_below="@+id/descripciond"
		        android:layout_marginLeft="10dip"		         
		        android:textColor="@color/text_descrip"
		        android:textStyle="bold"
		          />
               <TextView
		        android:id="@+id/precio"
		        android:layout_width="match_parent"
		        android:paddingTop="5dp"
		        android:layout_height="30dp"		      
		        android:layout_below="@+id/textprecioMenu"
		        android:layout_marginLeft="10dip"	       
		        android:textColor="@color/text_descrip"
		          />
                           
             
               <TextView
		        android:id="@+id/texthorario"
		        android:layout_width="match_parent"
		        android:paddingTop="5dp"
		        android:layout_height="30dp" 		      
		        android:layout_below="@+id/precio"
		        android:layout_marginLeft="10dip"		         
		        android:textColor="@color/text_descrip"
		        android:textStyle="bold"
		          />
               <TextView
		        android:id="@+id/horario"
		        android:layout_width="match_parent"
		        android:paddingTop="5dp"
		        android:layout_height="wrap_content"		      
		        android:layout_below="@+id/texthorario"
		        android:layout_marginLeft="10dip"	       
		        android:textColor="@color/text_descrip"
		        />
                <TextView
		        android:id="@+id/texttiposd"
		        android:layout_width="match_parent"
		        android:paddingTop="5dp"
		        android:layout_height="30dp" 		      
		        android:layout_below="@+id/horario"
		        android:layout_marginLeft="10dip"		         
		        android:textColor="@color/text_descrip"
		        android:textStyle="bold"
		          />
                <TextView
		        android:id="@+id/tiposd"
		        android:layout_width="match_parent"
		        android:paddingTop="5dp"
		        android:layout_height="wrap_content"		      
		        android:layout_below="@+id/texttiposd"
		        android:layout_marginLeft="10dip"	       
		        android:textColor="@color/text_descrip"
		        />
              
              
        </RelativeLayout>
    </ScrollView>

