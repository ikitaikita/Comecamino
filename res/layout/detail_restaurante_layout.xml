               <Button
            android:id="@+id/buttonWeb"
            android:layout_width="80dp"
            android:paddingTop="5dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dip"
            android:gravity="left"
            android:layout_below="@+id/chequeRestaurante"
            android:textColor="@color/text_descrip"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="@string/webRestaurante" />
               <TextView
		        android:id="@+id/texttfnoRestaurante"
		        android:layout_width="match_parent"
		        android:paddingTop="5dp"
		        android:layout_height="30dp" 		      
		        android:layout_below="@+id/buttonWeb"
		        android:layout_marginLeft="10dip"		         
		        android:textColor="@color/text_descrip"
		        android:textStyle="bold"
		          />   
              <TextView
		        android:id="@+id/tfnoRestaurante"
		        android:layout_width="match_parent"
		        android:layout_height="30dp"			      
		        android:layout_below="@+id/texttfnoRestaurante"
		        android:layout_marginLeft="10dip"
		        android:gravity="left"		       
		        android:textColor="@color/text_descrip"
		          />
              
              <Button
            android:id="@+id/buttonMenus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tfnoRestaurante"
            android:textColor="@color/text_desamenu"
            android:textStyle="bold"
            android:text="@string/menusdesayunos" />
               
              
          </RelativeLayout>
         
    </ScrollView>

    <LinearLayout
