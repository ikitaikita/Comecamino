<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
     <style name="section_title_todosrestaurantes">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColor">@color/tit</item>
        <item name="android:textSize">23dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/white</item>
        <item name="android:shadowColor">@color/grey</item>
        <item name="android:layout_height">40dp</item>
    </style>
    
      <!-- ABOUT STYLES -->
        <style name="about_normal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="about_light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">10dip</item>
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="android:textSize">15dip</item>
    </style>

    <style name="about_desc">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="about_contact">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_primary_light</item>
    </style>

    <style name="about_powered">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">40dip</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:textSize">10dip</item>
        <item name="android:paddingBottom">20dip</item>
    </style>
    
       <style name="navigationBottomLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/text_new_light</item>
    </style>
    
       
       <!-- YOUTUBE VIDEOWALL -->
       <style name="BlackNoBarsTheme" parent="android:Theme.Black.NoTitleBar.Fullscreen"/>

</resources>
